#!/bin/bash

# By default, vtep docker container is not run in mm when starting. To start the
# vtep container, the USE_VTEP env var MUST be set and as usual to start a new
# service: ./init; ./start

if [ -n $USE_VTEP ]; then
    sudo docker run -d $@ --privileged -v /lib/modules:/lib/modules -p 6632:6632 -p 4789:4789 -it midonet/vtep-emu:ubuntu1404
fi
