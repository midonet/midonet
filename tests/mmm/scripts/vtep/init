if [ -n $USE_VTEP ]; then
    REPO=midonet/vtep-emu
    TAG=ubuntu1404

    # Pull vtep-emu docker image from dockerhub if not present

    docker images |grep ^$REPO | awk '{print $2}'| grep -qw $TAG || {
        echo "Pulling midonet/vtep-emu:ubuntu1404 docker container..."
        sudo docker pull midonet/vtep-emu:ubuntu1404
    }
fi
