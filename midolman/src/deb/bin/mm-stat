if [ -f /usr/share/midolman/prepare-java ]; then
    . /usr/share/midolman/prepare-java
else
    echo "/usr/share/midolman/prepare-java: file not found"
    exit 1
fi

# If MIDO_HOME has not been set, set it.
if [ -z "$MIDO_HOME" ]; then
   MIDO_HOME=/usr/share/midolman
fi

if [ ! -d "$MIDO_HOME" ]; then
   echo "ERROR: $MIDO_HOME does not exist"
   exit 1
fi

MAIN_CLASS='org.midonet.midolman.management.MidolmanStat'
CLASSPATH=$MIDO_HOME/*:$MIDO_HOME/dep/*

exec $JAVA -XX:+TieredCompilation -XX:TieredStopAtLevel=1 -Xverify:none \
    -cp $CLASSPATH $MAIN_CLASS $*
