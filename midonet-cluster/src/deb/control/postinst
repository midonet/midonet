#!/bin/sh

NAME="midonet-cluster"
DATADIR=/var/lib/midonet-cluster
POST_DIR=/var/lib/dpkg/info

install -d /var/log/$NAME $DATADIR


test -e /lib/init/upstart-job \
    && ln -sf /lib/init/upstart-job /etc/init.d/midonet-cluster \
    && echo "Upstart supported." \
    || echo "Upstart not supported."

systemctl preset midonet-cluster.service 2>1 > /dev/null \
    && echo "Systemd supported." \
    || echo "Systemd not supported."
systemctl enable midonet-cluster.service 2>1 > /dev/null
