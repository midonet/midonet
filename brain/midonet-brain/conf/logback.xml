<configuration scan="true">
    <jmxConfigurator/>

    <appender name="LOG-FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${midonet-brain.log.dir}midonet-brain.log</file>
        <append>true</append>
        <encoder>
            <pattern>%d{yyyy.MM.dd HH:mm:ss.SSS} %-5level [%thread] %logger{0} - %X{cookie} %m%n%rEx</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
                <fileNamePattern>${midonet-brain.log.dir}midonet-brain.%d{yyyy-MM-dd}.log</fileNamePattern>
                <maxHistory>7</maxHistory>
        </rollingPolicy>
    </appender>

    <!-- Fine grained settings for specific classes, sample-->
    <!-- logger name="org.eclipse.jetty" level="INFO" / -->

    <!-- OFF, ERROR, WARN, INFO, DEBUG, TRACE -->
    <root level="INFO">
        <appender-ref ref="LOG-FILE" />
    </root>

</configuration>
